tmake const :mytree
"A cat" "Garfield" :mytree t! drop  # t! will automatically put the value of the key to TOS
"A dog" "Droopy" :mytree t! drop    # many times, we want to ignore it, so we `drop` it here.

# assert on fetching from first tree
"Garfield" :mytree t@
"A cat" str= assert
"Droopy" :mytree t@
"A dog" str= assert

# create a second tree
tmake const :mytree2
"Elizabethan author" "Shakespeare" :mytree2 t! drop

# assert on fetching, and that we are isolated from the first tree
"Shakespeare" :mytree2 t@
"Elizabethan author" str= assert
"Garfield" :mytree2 t@   # should be a null entry
0 = assert

# check the first tree again:
"Garfield" :mytree t@
"A cat" str= assert

# test deleting an element
"Shakespeare" :mytree2 tdel
"Shakespeare" :mytree2 t@
0 = assert

# test destroying a tree:
:mytree tdestroy
"Garfield" :mytree t@
0 = assert
#"Droopy" :mytree t@
#0 = assert

"If you are only seeing this msg, all tests have passed!" print cr
