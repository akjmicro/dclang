# N.B. this is a newer, more efficient algorithm, simply using swaps

: TEMP-SLOT 0 ;
: DECK-START 1 ;
: NUM-CARDS 52 ;

: deck-setup
  NUM-CARDS 0 1 for
    i i DECK-START + !
  next
;

: cell-swap
  2dup
  @ TEMP-SLOT !
  @ swap !
  TEMP-SLOT @ swap !
;

: shuffle-deck
  0 TEMP-SLOT !
  NUM-CARDS 1 + times
      i
      rand NUM-CARDS * floor
      cell-swap
  again
;

: printout-deck
  NUM-CARDS times
    i DECK-START + @ .
  again
  cr
;

: do-shuffle
  deck-setup
  shuffle-deck
  printout-deck
;

do-shuffle
